{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BGL Write Plan",
  "type": "object",
  "required": ["version", "id", "operations"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "id": { "type": "string", "minLength": 1 },
    "created_at": { "type": "number" },
    "description": { "type": "string" },
    "metadata": { "type": "object" },
    "operations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["op", "path"],
        "properties": {
          "op": {
            "type": "string",
            "enum": ["create", "modify", "delete", "rename", "move", "mkdir"]
          },
          "path": { "type": "string", "minLength": 1 },
          "to": { "type": "string" },
          "content": { "type": "string" },
          "mode": {
            "type": "string",
            "enum": ["overwrite", "append", "prepend", "replace", "insert_before", "insert_after"]
          },
          "match": { "type": "string" },
          "regex": { "type": "boolean" },
          "count": { "type": "integer", "minimum": 1 }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
